@inherits Umbraco.Web.Macros.PartialViewMacroPage

	
	@{
	var selection = CurrentPage.Site().FirstChild("ArticlesMain").Children("ArticleItem").Where("Visible").OrderBy("CreateDate desc");
}
	<ul>
	@for(var i = 0; i <= 4; i++){
		<li>
			<a href="@selection[i].url">@selection[i].name</a>
		</li>
	}
</ul>